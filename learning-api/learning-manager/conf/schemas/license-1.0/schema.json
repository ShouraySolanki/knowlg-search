{
    "$id": "license-schema.json",
    "$schema": "http://json-schema.org/draft-07/schema#",
    "title": "License",
    "type": "object",
    "required": [
        "name",
        "code",
        "url"
    ],
    "properties": {
        "name": {
            "type": "string",
            "minLength": 5
        },
        "code": {
            "type": "string"
        },
        "status": {
            "type": "string",
            "enum": [
                "Live",
                "Retired"
            ],
            "default": "Live"
        },
        "description": {
            "type": "string"
        },
        "identifier": {
            "type": "string"
        },
        "url": {
            "type": "string"
        }
    }
}