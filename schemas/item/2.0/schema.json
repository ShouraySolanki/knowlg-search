{
    "$id": "item-schema.json",
    "$schema": "http://json-schema.org/draft-07/schema#",
    "title": "Item",
    "type": "object",
    "required": [
        "name",
        "code",
        "type",
        "qlevel",
        "itemType",
        "category"
    ],
    "properties": {
        "name": {
            "type": "string",
            "minLength": 5
        },
        "code": {
            "type": "string"
        },
        "description": {
            "type": "string"
        },
        "maxScore": {
            "type": "number"
        },
        "type": {
            "type": "string",
            "enum": [
                "embedded",
                "mcq",
                "ftb",
                "mtf",
                "recognition",
                "vsa",
                "sa",
                "la",
                "reference",
                "other"
            ]
        },
        "owner": {
            "type": "string"
        },
        "status": {
            "type": "string",
            "enum": [
                "Draft",
                "Review",
                "Live",
                "Retired",
                "Mock",
                "Reject"
            ],
            "default": "Live"
        },
        "prevState": {
            "type": "string"
        },
        "pkgVersion": {
            "type": "number"
        },
        "version": {
            "type": "number",
            "default": 2
        },
        "language": {
            "type": "array",
            "items": {
                "type": "string",
                "enum": [
                    "English",
                    "Hindi",
                    "Assamese",
                    "Bengali",
                    "Gujarati",
                    "Kannada",
                    "Malayalam",
                    "Marathi",
                    "Nepali",
                    "Odia",
                    "Punjabi",
                    "Tamil",
                    "Telugu",
                    "Urdu",
                    "Sanskrit",
                    "Maithili",
                    "Munda",
                    "Santali",
                    "Juang",
                    "Ho",
                    "Other"
                ]
            },
            "default": ["English"]
        },
        "channel": {
            "type": "string"
        },
        "framework": {
            "type": "string"
        },
        "createdFor": {
            "type": "array"
        },
        "createdBy": {
            "type": "string"
        },
        "lastUpdatedBy": {
            "type": "string"
        },
        "lastSubmittedBy": {
            "type": "string"
        },
        "publisher": {
            "type": "string"
        },
        "lastPublishedBy": {
            "type": "string"
        },

        "createdOn": {
            "type": "string"
        },
        "lastUpdatedOn": {
            "type": "string"
        },
        "lastStatusChangedOn": {
            "type": "string"
        },
        "lastSubmittedOn": {
            "type": "string"
        },
        "lastPublishedOn": {
            "type": "string"
        },
        "title": {
            "type": "string"
        },
        "template": {
            "type": "string"
        },
        "template_id": {
            "type": "string"
        },
        "keywords": {
            "type": "array"
        },
        "question": {
            "type": "string"
        },
        "question_audio": {
            "type": "string"
        },
        "question_image": {
            "type": "string"
        },
        "media": {
            "type": "object"
        },
        "model": {
            "type": "object"
        },
        "options": {
            "type": "object"
        },
        "lhs_options": {
            "type": "object"
        },
        "rhs_options": {
            "type": "object"
        },
        "responses": {
            "type": "object"
        },
        "answer": {
            "type": "object"
        },
        "hints": {
            "type": "object"
        },
        "qlevel": {
            "type": "array",
            "items": {
                "type": "string",
                "enum": [
                    "EASY",
                    "MEDIUM",
                    "DIFFICULT",
                    "RARE"
                ]
            },
            "default": ["MEDIUM"]
        },
        "purpose": {
            "type": "array",
            "items": {
                "type": "string",
                "enum": [
                    "Knowledge",
                    "Conceptual",
                    "Application",
                    "Problem Solving"
                ]
            }
        },
        "depth_of_knowledge": {
            "type": "array",
            "items": {
                "type": "string",
                "enum": [
                    "Recall",
                    "Skill",
                    "Strategic Thinking",
                    "Extended Thinking"
                ]
            }
        },
        "used_for": {
            "type": "array",
            "items": {
                "type": "string",
                "enum": [
                    "assessment",
                    "worksheet"
                ]
            }
        },
        "rendering_metadata": {
            "type": "object"
        },
        "num_answers": {
            "type": "number"
        },
        "max_score": {
            "type": "number"
        },
        "max_time": {
            "type": "number"
        },
        "partial_scoring": {
            "type": "boolean"
        },
        "feedback": {
            "type": "string"
        },
        "source": {
            "type": "string"
        },
        "example": {
            "type": "string"
        },
        "references": {
            "type": "string"
        },
        "gradeLevel": {
            "type": "array"
        },
        "topic": {
            "type": "string"
        },
        "board": {
            "type": "string"
        },
        "subject": {
            "type": "string"
        },
        "medium": {
            "type": "string"
        },
        "versionDate": {
            "type": "string"
        },
        "validators": {
            "type": "array"
        },
        "learningObjective": {
            "type": "array"
        },
        "versionCreatedBy": {
            "type": "string"
        },
        "isShuffleOption": {
            "type": "boolean"
        },
        "evalUnordered": {
            "type": "boolean"
        },
        "isPartialScore": {
            "type": "boolean"
        },
        "itemType": {
            "type": "string",
            "items": {
                "type": "string",
                "enum": [
                    "UNIT",
                    "SET",
                    "DYNAMIC"
                ],
                "default": "UNIT"
            }
        },
        "category": {
            "type": "array",
            "items": {
                "type": "string",
                "enum": [
                    "MCQ",
                    "FTB",
                    "MTF",
                    "VSA",
                    "SA",
                    "LA",
                    "REFERENCE",
                    "CuriosityQuestion"
                ],
                "default": "MCQ"
            }
        },
        "templateType": {
            "type": "string"
        },
        "topicData": {
            "type": "string"
        },
        "questionTitle": {
            "type": "string"
        },
        "appId": {
            "type": "string"
        },
        "solutions": {
            "type": "string"
        },
        "consumerId": {
            "type": "string"
        },
        "templateId": {
            "type": "string"
        },
        "qumlConfig": {
            "type": "object"
        },
        "responseDeclaration": {
            "type": "object"
        },
        "learningOutcome": {
            "type": "array"
        },
        "bloomsLevel": {
            "type": "array"
        },
        "programId": {
            "type": "string"
        },
        "qumlVersion": {
            "type": "number"
        },
        "editorState": {
            "type": "string"
        },
        "creator": {
            "type": "string"
        },
        "program": {
            "type": "string"
        },
        "rejectComment": {
            "type": "string"
        },
        "body": {
            "type": "string"
        },
        "data": {
            "type": "string"
        },
        "author": {
            "type": "array"
        },
        "organisation": {
            "type": "array"
        }
    }
}